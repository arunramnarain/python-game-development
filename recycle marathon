import pygame
import random
import time

pygame.init()
W = 700
H = 600

def change_background(img):
    backround = pygame.image.load(img)
    bg = pygame.transform.scale(backround,(W,H))
    screen.blit(bg,(0,0))

pygame.display.set_caption("recycle marathon")
screen = pygame.display.set_mode((W,H))

class Bin(pygame.sprite.Sprite):
    
    def __init__(self):
        super().__init__()
        self.image = pygame.image.load("recycle marathon\\images\\Bin.png").convert_alpha()
        self.image = pygame.transform.scale(self.image,(40,60))
        self.rect = self.image.get_rect()

class Recyclable(pygame.sprite.Sprite):

    def __init__(self,img):
        super().__init__()
        self.image = pygame.image.load(img).convert_alpha()
        self.image = pygame.transform.scale(self.image,(30,40))
        self.rect = self.image.get_rect()

class Non_recyclable(pygame.sprite.Sprite):

    def __init__(self):
        super().__init__()
        self.image = pygame.image.load("recycle marathon\\images\\palstic_bag.png").convert_alpha()
        self.image = pygame.transform.scale(self.image,(40,50))
        self.rect = self.image.get_rect()

#list of images for recyclable class

images = ["recycle marathon\\images\\pencil.png","recycle marathon\\images\\pencil.png","recycle marathon\\images\\box.png"]

item_list = pygame.sprite.Group()#grouping the recyclable items
all_sprites = pygame.sprite.Group()# grouping all the items
plastic_list = pygame.sprite.Group()

for i in range(50):
    item = Recyclable(random.choice(images))
    item.rect.x = random.randrange(30,W-30)
    item.rect.y = random.randrange(30,H-30)
    item_list.add(item)
    all_sprites.add(item)


for i in range(50):
    plastic = Non_recyclable()
    plastic.rect.x = random.randrange(30,W-30)
    plastic.rect.y = random.randrange(30,H-30)
    plastic_list.add(plastic)
    all_sprites.add(plastic)








#creating the bin
bin = Bin()
all_sprites.add(bin)

r = (255,0,0)
g = (0,255,0)
blue = (0,0,255)
w = (255,255,255)
brown = (150,75,0)

running = True
score = 0
clock = pygame.time.Clock()
start_time = time.time()

myfont = pygame.font.SysFont("Times New Roman",22)
timingFont = pygame.font.SysFont("Times New Roman",22)
text = myfont.render("Score = " + str(0),True,"Green")

while running:
    clock.tick(30)# means that it only runs at 30 frames per second
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    Elapsed_time = time.time() -  start_time

    if Elapsed_time >= 60:
        if score > 50:
            text = myfont.render("congratulations bin loot succesful", True, r)
            change_background("recycle marathon\\images\\winning screen.jpg")
            screen.blit(text,(W - 600,H/2)) 
        else:
            text = myfont.render("better luck next time", True, r)
            change_background("recycle marathon\\images\\recycle_screen.png") 
            screen.blit(text,(W - 600,H/2))
    
    else:
        change_background("recycle marathon\\images\\backround.png")
        countdown = timingFont.render("Time Left:" + str(60-int(Elapsed_time)),True,r)
        screen.blit(countdown, (30,80))

        #to move the bin
        keys = pygame.key.get_pressed()

        if keys[pygame.K_UP]:
            if bin.rect.y > 0:
                bin.rect.y -= 5

        if keys[pygame.K_DOWN]:
            if bin.rect.y < H:
                bin.rect.y += 5

        if keys[pygame.K_LEFT]:
            if bin.rect.x > 0:
                bin.rect.x -= 5
        
        if keys[pygame.K_RIGHT]:
            if bin.rect.x < W:
                bin.rect.x += 5
        
        item_hit_list = pygame.sprite.spritecollide(bin,item_list,True)
        plastic_hit_list = pygame.sprite.spritecollide(bin,plastic_list,True)

        for item in item_hit_list:
            score += 1
            text = myfont.render("score: " + str(score),True,r)

        for plastic in plastic_hit_list:
            score -= 1
            text = myfont.render("score: " + str(score),True,r)
        screen.blit(text,(30,30))
        all_sprites.draw(screen)
    pygame.display.update()

pygame.quit()

