import pgzrun
import random

TITLE="rectangle"
WIDTH=500
HEIGHT=500

def draw():
    r=255
    g=0
    b=random.randint(0,255)
    width=WIDTH-200
    height=HEIGHT-200
    for i in range(20):
        rect=Rect((0,0),(width,height))
        rect.center=250,250
        screen.draw.rect((rect),(r,g,b))
        r -= 10
        g += 10
        width -= 10
        height -= 10



pgzrun.go()
